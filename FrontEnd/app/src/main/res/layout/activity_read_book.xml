<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/Padding_header"
        android:orientation="vertical"
        android:elevation="4dp">

        <!-- Header content với layout cân đối -->
        <RelativeLayout
            android:id="@+id/header_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="16dp">

            <!-- Nút back ở bên trái -->
            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_back"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back" />

            <!-- Tiêu đề ở giữa với constraints để không tràn lên icon -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/back_icon"
                android:layout_toStartOf="@id/menu_in_book"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:singleLine="true" />

            <!-- Menu button ở bên phải -->
            <ImageView
                android:id="@+id/menu_in_book"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/menu_in_book_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Menu" />

        </RelativeLayout>

        <!-- Divider line -->
        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginHorizontal="16dp" />
    </LinearLayout>

    <!-- Book Info Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Book Cover -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="160dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_book_cover"
                    android:background="@color/light_gray" />
            </androidx.cardview.widget.CardView>

            <!-- Book Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <!-- Author -->
                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/author_label_placeholder"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_show_chapters"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chapter_list_button"
                    android:textAllCaps="false"
                    android:textColor="@color/ping"
                    app:icon="@drawable/ic_chapter_list"
                    app:iconPadding="8dp"
                    app:iconTint="@color/ping"
                    app:iconGravity="textStart" />

                <LinearLayout
                    android:id="@+id/chapter_navigation_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_prev_chapter"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/chapter_previous"
                        android:textAllCaps="false"
                        android:textColor="@color/ping"
                        app:cornerRadius="24dp"
                        app:backgroundTint="@color/gray_blur"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_next_chapter"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/chapter_next"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:cornerRadius="24dp"
                        app:backgroundTint="@color/ping" />

                </LinearLayout>

                <!-- Font Size Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Font: "
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/btn_font_decrease"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_text_decrease"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Decrease font size" />

                    <ImageView
                        android:id="@+id/btn_font_increase"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_text_increase"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Increase font size" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- WebView - Simple như cũ -->
    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white" />
</LinearLayout>