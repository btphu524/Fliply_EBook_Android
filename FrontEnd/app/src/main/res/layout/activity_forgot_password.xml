<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll_view_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingTop="@dimen/Padding_header"
                android:paddingBottom="6dp"
                android:layout_marginBottom="115dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/header_row_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="19dp"
                    android:layout_marginStart="11dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/back_button_forgot_password"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="117dp"
                        android:src="@drawable/icon_back"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/title_forgot_password"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Forgot password"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/divider_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#000000"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/email_input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/label_email_address"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="31dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Enter Email Address"
                    />
                <EditText
                    android:inputType="textEmailAddress"
                    android:hint="Example@gmail.com"
                    android:id="@+id/edit_text_email_forgot_password"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginBottom="36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:paddingVertical="17dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="36dp"
                    />
                <TextView
                    android:id="@+id/link_back_to_sign_in"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Back To Sign In"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/send_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/rounded_button"
                android:paddingVertical="17dp"
                android:layout_marginBottom="398dp"
                android:layout_marginHorizontal="20dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_send_button"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Send"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/signup_prompt_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="120dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_dont_have_account"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginBottom="21dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Donâ€™t have an account?"
                    />
                <LinearLayout
                    android:id="@+id/signup_button_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/edittext_background"
                    android:paddingVertical="17dp"
                    android:layout_marginHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_signup_button"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Sign Up"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
